<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rssTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_centerHorizontal="true"
        android:minWidth="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:id="@+id/textView2"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_toLeftOf="@+id/rssTitle"
        android:layout_alignBaseline="@+id/rssTitle" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rssLink"
        android:inputType="text"
        android:width="2dp"
        android:layout_below="@+id/rssTitle"
        android:layout_centerHorizontal="true"
        android:minWidth="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="URL"
        android:id="@+id/textView3"
        android:layout_toLeftOf="@+id/rssLink"
        android:layout_alignBaseline="@+id/rssLink" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/addOk"
        android:layout_below="@+id/rssLink"
        android:layout_centerHorizontal="true" />

</RelativeLayout>