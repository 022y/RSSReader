<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView android:id="@+id/text1"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView android:id="@+id/text2"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic" />
    <View
        android:id="@+id/separator_down"
        android:layout_below="@+id/menu_item_label"
        android:layout_width="wrap_content"
        android:background="@drawable/separator_item"
        android:layout_height="3dp" />

    <View
        android:id="@+id/separator_up"
        android:layout_below="@+id/separator_down"
        android:layout_width="wrap_content"
        android:background="@drawable/separator_item_down"
        android:layout_height="3dp" />

</LinearLayout>